    crossorigin="anonymous" />
  <link rel="stylesheet" href="style/style.css">
  <script defer>
    window.onload = function () {
      const loader = document.createElement('div')
      loader.classList.add('card-wrapper')
      loader.innerHTML = `<div class="card-loader">
			<div class="spinner">
				<div class="spinner-item"></div>
				<div class="spinner-item"></div>
				<div class="spinner-item"></div>
				<div class="spinner-item"></div>
				<div class="spinner-item"></div>
			</div>
			<p>Loading ....</p>
    </div>`
      document.body.appendChild(loader)
      setTimeout(() => {
        loader.remove()
      }, 8000);
    };
  </script>
</head>

<body>
  <div class="main-wrapper">
    <div id="video-grid"></div>


  </div>
  <footer>
    <div class="left-wrapper">
      <button class="footer-btn btn-group share-btn"><span>Meeting Details</span><i
          class="fas fa-angle-down"></i></button>
      <div class="share-wrapper">
        <div class="share-wrapper-header">
          <p class="group"><i class="fas fa-info-circle"></i><span>Details</span></p>
        </div>
        <div class="share-wrapper-body">
          <p><b>Joining Info</b></p>
          <p>https://video.xyz.site/<%= roomId %>
          </p>
          <p id="copy" data="https://video.xyz.site/<%= roomId %>" class="group"><i class="fas fa-copy"></i><span>Copy
              joining info</span></p>
        </div>
      </div>
    </div>
    <div class="middle-wrapper">
      <button id="video" class="footer-btn" onclick="stop()"><i class="fas fa-video"></i></button>
      <button data="false" id="meeting-end" class="footer-btn call connect tooltip" tool_tip="Join the Meeting"
        onclick="call()"><i class="fas fa-phone"></i></button>
      <button id="mute" class="footer-btn" onclick="mute()"><i class="fas fa-microphone"></i></button>
    </div>
    <div class="right-wrapper">
      <button id="share-screen" onclick="shareScreen()" class="footer-btn btn-group"><span>Present</span><i
          class="fas fa-tv"></i></button>
    </div>


  </footer>
</body>

</html>